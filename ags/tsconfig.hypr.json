{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"lib": ["ES2022"],
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"noImplicitAny": false,
		"typeRoots": [
			"./types",
			"./types/widgets/entry.d.ts",
			"./types/dbus/types.d.ts",
		],
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "/tmp/ags.hypr/js",
	},
	"include": ["base", "hypr", "types"],
	"exclude": ["build", "config.*.js"],
	// "references": [{ "path": "./tsconfig.json" }]
}